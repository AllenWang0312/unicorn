<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_raw_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details:"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView android:text="LEN"/>
            <TextView android:text="TYPE"/>
            <TextView android:text="VALUE"/>
        </TableRow>
        <TableRow android:id="@+id/tab_row_2"></TableRow>
        <TableRow android:id="@+id/tab_row_3"></TableRow>
        <TableRow android:id="@+id/tab_row_4"></TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>