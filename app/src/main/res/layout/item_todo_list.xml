        <!--android:id="@+id/options_one"-->
        <!--android:src="@drawable/ic_add_white_24dp"-->
        <!--android:background="@color/colorAccent"-->
        <!--android:layout_marginRight="8dp"/>-->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"   android:layout_marginRight="8dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_loyalty_white_24dp"
        android:id="@+id/options_two"/>
    <ImageView

        android:layout_width="24dp"
        android:layout_height="24dp"   android:layout_marginRight="8dp"  android:background="@color/colorAccent"
        android:src="@drawable/ic_add_white_24dp"
        android:id="@+id/options_three"/>
</LinearLayout>